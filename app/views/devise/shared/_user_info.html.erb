
<h2>User info</h2><!--共通部分-->
 <table class="table">
   <tbody>
     <tr>
      <%= image_tag user.get_profile_image(100,100) %>
     </tr>
     <tr>
       <th>name</th>
       <th><%= user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
     </tr>
   </tbody>
 </table>
 <div class="row">
   <% if current_user == @user %> <!-- ログインユーザーと表示するユーザーが同じ場合 -->
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user_108844" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %> <!-- ログインユーザーと表示するユーザーが異なる場合 -->
    <%= link_to user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
 </div>
