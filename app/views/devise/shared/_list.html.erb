<h2>User info</h2><!--共通部分-->
 <table class="table">
   <tbody>
     <tr>
       <th>name</th>
       <th><%= @user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
     </tr>
   </tbody>
 </table>
 <div>
   <%= link_to 'Edit', edit_user_path %>
 </div>

<h2>New book</h2><!--共通部分-->
 <%= form_with model: @book do |f| %>

  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>

 <% end %>