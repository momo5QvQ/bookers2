<%= render 'devise/shared/user_info', user: @user %>
<%= render 'devise/shared/new_book', book: @book_new %>
<div>
 <h2>Book detail</h2>
 <table class="table">
  <tbody>
    <tr>
      <td>
       <a>
        <%= @book.user.name %>
        <%= image_tag @book.user.get_profile_image(100,100) %>
       </a>
      </td>
      <td>
        <%= @book.title %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(@book) %>
      </td>
      <td>
        <% if @book.user == current_user %>
         <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
 </table>
</div>