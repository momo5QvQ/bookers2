<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'devise/shared/user_info', user: @user %>
    <%= render 'devise/shared/new_book', book: @book_new %>
   </div>
<div class="col-md-9">
 <h2>Book detail</h2>
 <table class="table">
  <tbody>
    <tr>
      <td>
       <a>
        <%= link_to @book.user.name, user_path(@book.user) %>
        <%= link_to image_tag(@book.user.get_profile_image(100,100)), user_path(@book.user) %>
       </a>
      </td>
      <td>
        <%= link_to @book.title, book_path(@book) %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <td>
        <% if @book.user == current_user %>
         <%= link_to "Edit", edit_book_path(@book) %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
         <%= link_to "Destroy", book_path(@book), method: :delete %>
        <% end %>
      </td>
    </tr>
  </tbody>
 </table>
</div>
</div>
</div>