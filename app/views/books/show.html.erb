<h2>Book detail</h2>
 <table class="table">
  <tbody>
    <tr>
      <td>
       <a>
        <%= @book.user.name %>
        <%= image_tag @book.user.get_profile_image(100,100) %>
       </a>
      </td>
      <td>
        <%= @book.title %>
      </td>
      <td>
        <%= @book.body %>
      </td>
