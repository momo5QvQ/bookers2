<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'devise/shared/user_info', user: @user %>
   <%= render 'devise/shared/new_book', book: @book %>
  </div>
<div class="col-md-9">
<h2>Books</h2>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Option</th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><!--投稿ユーザー画像-->
     <%= link_to image_tag book.user.get_profile_image(100,100) %>
    </td>
    <td>
     <%= link_to book.title, book_path(book) %>
    </td>
    <td>
     <%= book.body %>
    </td>
   </tr>
  <% end %>
 </tbody>
</table>
</div>
</div>
</div>