<h1>User info</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <%= form_with model: @user do |f| %>
 <div>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
 </div>
 <div>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
 </div>
 <div>
  <label for="imputIntroduction">Introduction</label>
  <%= f.text_area :introduction, placeholder:"text" %>
 </div>
 <div>
  <%= f.submit "Update User" %>
 </div>
<% end %>
